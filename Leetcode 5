class Solution 
{
    public String longestPalindrome(String s) 
    {
        int n = s.length();
        if(n<=1)
        {
            return s;
        }
        String odd = oddPalindrome(s,n);
        String even = evenPalindrome(s,n);
        return (odd.length()>=even.length()) ? odd : even;    
    }
    public String oddPalindrome(String s, int n)
    {
        String Palindrome = "";
        for(int i=0; i<s.length(); i++)
        {
            int left = i;
            int right = i;
            while(left>=0 && right<n && s.charAt(left) == s.charAt(right))
            {
                left--;
                right++;
            }
            String currPalindrome = s.substring(left+1,right);
            if(currPalindrome.length()>=Palindrome.length())
            {
                Palindrome = currPalindrome;
            }
        }
        return Palindrome;
    }
    public String evenPalindrome(String s, int n)
    {
        String Palindrome = "";
        for(int i=0; i<s.length(); i++)
        {
            int left = i;
            int right = i+1;
            while(left>=0 && right<n && s.charAt(left) == s.charAt(right))
            {
                left--;
                right++;
            }
            String currPalindrome = s.substring(left+1,right);
            if(currPalindrome.length()>=Palindrome.length())
            {
                Palindrome = currPalindrome;
            }
        }
        return Palindrome;
    }
}
