class Solution 
{
    public double findMaxAverage(int[] nums, int k) 
    {
        int windowSize = 0;
        for(int i=0; i<k; i++)
        {
            windowSize+=nums[i];
        }    
        int maximumSum = windowSize;
        for(int i=k; i<nums.length; i++)
        {
            windowSize += nums[i]-nums[i-k];
            maximumSum = Math.max(windowSize,maximumSum);
        }
        return (double)maximumSum/k;
    }
}
